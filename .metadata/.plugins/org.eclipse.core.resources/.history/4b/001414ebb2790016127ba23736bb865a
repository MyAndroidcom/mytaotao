package com.xhp.spring.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.xhp.bean.Bean;

@Controller
@RequestMapping(value="/pro")
public class ProvinceCityAreaController {
    
    @Autowired
    private ProvinceCityAreaService provinceCityAreaService;
    //Bean是实体，封装省份和城市
    private Bean bean;
    public Bean getBean() {
            return bean;
    }
    public void setBean(Bean bean) {
            this.bean = bean;
    }
    
    public @ResponseBody List<String> findCityByProvince() throws Exception{
        return provinceCityAreaService.findCityByProvince(bean.getProvince());
    }
    public @ResponseBody List<String> findAreaByCity()throws Exception{
        return provinceCityAreaService.findAreaByCity(bean.getCity());
    }
}
