package com.xhp.spring.controller;

import java.net.URLDecoder;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;


@Controller
@RequestMapping(value="/pro")
public class ProvinceCityAreaController {
    
    @Autowired
    private ProvinceCityAreaService provinceCityAreaService;
    @RequestMapping(value="/findCityByProvince")
    public @ResponseBody List<String> findCityByProvince(@RequestParam String province) throws Exception{
       /* byte[] buf = username.getBytes("ISO8859-1");
        username = new String(buf,"UTF-8");*/
        
        byte[] buf = province.getBytes("ISO8859-1");
        province = new String(buf,"UTF-8");
        System.out.println(province);
        return provinceCityAreaService.findCityByProvince(province);
    }
    @RequestMapping(value="/findAreaByCity")
    public @ResponseBody List<String> findAreaByCity(@RequestParam String city)throws Exception{
        byte[] buf = city.getBytes("ISO8859-1");
        city = new String(buf,"UTF-8");
        return provinceCityAreaService.findAreaByCity(city);
    }
}
